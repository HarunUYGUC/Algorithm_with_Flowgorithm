    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="sayi, sonuc, ciftTop, tekTop, kacKere" type="Integer" array="False" size=""/>
            <assign variable="tekTop" expression="0"/>
            <assign variable="ciftTop" expression="0"/>
            <output expression="&quot;+1 -2 +3 -4 +5 -6 ..... +girilen say&#305;&quot; &amp; &quot;'ya kadar olan i&#351;lemi yapmak i&#231;in say&#305;n&#305;z&#305; giriniz!&quot;" newline="True"/>
